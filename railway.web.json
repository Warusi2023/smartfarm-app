{
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "npm install -g serve",
    "buildCommand": "echo 'No build needed - serving static files'"
  },
  "deploy": {
    "startCommand": "serve public -p $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 120
  },
  "rootDirectory": "web-project",
  "environment": {
    "VITE_API_URL": "https://smartfarm-app-production.up.railway.app/api",
    "APP_BUILD_TAG": "railway"
  }
}