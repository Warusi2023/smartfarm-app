# SmartFarm Backend Production Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=production
PORT=3000

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DB?sslmode=require

# Database SSL/TLS Configuration
# Production: Certificate validation is ALWAYS enforced (rejectUnauthorized: true)
# Development: Set DB_ALLOW_INSECURE_SSL=true ONLY for local testing (NOT recommended)
# DB_ALLOW_INSECURE_SSL=false                    # Allow insecure SSL in development (default: false, NOT recommended)
# DB_SSL_CA=/path/to/ca-certificate.pem          # Optional: Path to CA certificate file
# DB_SSL_CERT=/path/to/client-certificate.pem    # Optional: Path to client certificate file
# DB_SSL_KEY=/path/to/client-key.pem             # Optional: Path to client key file
# Note: Certificate files can also be provided as environment variable content

# Authentication
JWT_SECRET=replace_with_strong_secret_minimum_32_characters_long
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=https://smartfarmfiji.com,https://www.smartfarmfiji.com,https://smartfarm-app.netlify.app

# API Configuration
API_NAME=SmartFarm
API_VERSION=v1

# External Services
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Configuration
EMAIL_SERVICE=gmail                    # Options: gmail, sendgrid, mailgun, ses, smtp
EMAIL_USER=your-email@gmail.com        # Your email address or API key
EMAIL_PASS=your-app-password          # App password (for Gmail) or API key
EMAIL_FROM=SmartFarm <noreply@smartfarm.com>  # From address
FRONTEND_URL=https://your-frontend-domain.com  # Frontend URL for email links

# SMTP Configuration (if using custom SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SENDGRID_API_KEY=your_sendgrid_api_key

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_ROUTES=false
ENABLE_SWAGGER_DOCS=false
ENABLE_CORS_LOGGING=false

# Caching (Optional - falls back to in-memory cache if not set)
# Redis URL for distributed caching (production)
# Format: redis://[password@]host:port[/database]
# Example: redis://localhost:6379
# Example with auth: redis://:password@host:6379
# REDIS_URL=redis://localhost:6379
