# SmartFarm Backend API - Railway Environment Variables
# Copy these variables to your Railway project settings

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# JWT Configuration (Generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-for-production-change-this

# Database Configuration - Railway will provide these
# DATABASE_URL will be automatically set by Railway PostgreSQL
# PGDATABASE, PGUSER, PGPASSWORD will be set automatically

# CORS Configuration - Update with your frontend URLs
CORS_ORIGIN=https://www.smartfarm-app.com,https://smartfarm-app.com,https://dulcet-sawine-92d6a8.netlify.app,http://localhost:3000,http://localhost:8080

# Security Configuration
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications and verification)
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@smartfarm-app.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@smartfarm-app.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# External API Keys
WEATHER_API_KEY=your_weather_api_key_here
MAPS_API_KEY=your_maps_api_key_here

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Cache Configuration (Optional - for Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
