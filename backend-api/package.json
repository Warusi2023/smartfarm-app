{
  "name": "smartfarm-backend",
  "version": "1.0.0",
  "description": "SmartFarm Backend API",
  "main": "railway-server.js",
  "scripts": {
    "start": "node railway-server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js'",
    "deploy": "npm install && npm start",
    "setup-db": "node setup-database.js",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:integration": "jest --testMatch='**/*.test.js' --runInBand",
    "setup-railway": "node setup-railway.js",
    "railway:deploy": "npm run setup-railway && npm run migrate && npm start"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "smartfarm",
    "api",
    "backend",
    "agriculture"
  ],
  "author": "SmartFarm Team",
  "license": "MIT"
}
