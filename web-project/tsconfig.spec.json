{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node", "jest"]
  },
  "include": [
    "tests/**/*",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "test-results",
    "playwright-report",
    ".lighthouseci",
    "web/**"
  ]
}
