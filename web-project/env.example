# SmartFarm Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
VITE_API_BASE_URL=https://smartfarm-backend.railway.app
NEXT_PUBLIC_API_BASE_URL=https://smartfarm-backend.railway.app

# Weather Service
VITE_WEATHER_API_KEY=your_openweather_api_key_here
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here
NEXT_PUBLIC_WEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Development Settings
NODE_ENV=development
VITE_DEBUG=true

# Feature Flags
VITE_ENABLE_WEATHER=true
VITE_ENABLE_AI_ADVISORY=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# Error Tracking (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Third-party Services (Optional)
VITE_MAPBOX_TOKEN=your_mapbox_token_here
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_key_here