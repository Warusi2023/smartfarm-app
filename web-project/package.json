{
  "name": "smartfarm-frontend",
  "version": "1.0.0",
  "description": "SmartFarm Frontend - Modern Farm Management Dashboard",
  "main": "public/dashboard.html",
  "scripts": {
    "dev": "python -m http.server 8080",
    "lint": "eslint public/js/**/*.js --fix",
    "lint:check": "eslint public/js/**/*.js",
    "format": "prettier --write public/**/*.{js,html,css,json,md}",
    "format:check": "prettier --check public/**/*.{js,html,css,json,md}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testPathPattern=accessibility",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "build": "npm run prebuild && echo 'Frontend build completed'",
    "validate:svg": "node scripts/validate-svg.js",
    "validate:ids": "node scripts/validate-ids.js",
    "validate:cors": "node scripts/validate-cors.js",
    "prebuild": "npm run validate:svg && npm run validate:ids && npm run validate:cors",
    "lhci": "lhci autorun",
    "lhci:server": "lhci wizard"
  },
  "keywords": [
    "farm",
    "agriculture",
    "dashboard",
    "management",
    "accessibility"
  ],
  "author": "SmartFarm Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-axe": "^8.0.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "jspdf": "^2.5.1",
    "qrcode": "^1.5.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "public/js/**/*.js",
      "!public/js/vendor/**",
      "!public/js/lib/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": ["text", "lcov", "html"]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}